@model MedicoModel
@{
    ViewData["Title"] = "Editar Médico";
}
<h1>Editar Médicos</h1>

<form asp-controller="Medico" asp-action="Alterar" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o Nome do Médico">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        <label for="especialidade">Especialidade</label>
        <input type="text" asp-for="Especialidade" class="form-control" placeholder="Digite a Especialidade do Médico">
        @Html.ValidationMessageFor(x => x.Especialidade)
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o E-mail do Médico">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        <label for="celular">Celular</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Digite o Celular do Médico">
        @Html.ValidationMessageFor(x => x.Celular)
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Alterar</button>
    <a class="btn btn-secondary" asp-controller="Medico" asp-action="Index" role="button">Voltar</a>
</form>
