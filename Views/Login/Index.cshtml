@model LoginModel
@{
    Layout = "_LayoutDeslogada";
    ViewData["Title"] = "Login";
}


@if (TempData["MensagemSucesso"] != null)
{
    <Center>
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    </Center>
}

@if (TempData["MensagemErro"] != null)
{
    <Center>
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    </Center>
}

<section class="vh-100">
  <div class="container-fluid">
    <div class="row">                
      <div class="col-sm-6 text-black">

        <div class="d-flex align-items-center h-custom-1 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
                    
          <form style="width: 23rem;" asp-controller="Login" asp-action="Entrar" method="post">
                        <img src="~/images/logo.png" class="img-fluid" />

            <div class="form-outline mb-4">
              <label class="form-label" for="Email">Email</label>
              <input type="email" class="form-control form-control-lg" asp-for="Email" id="Login" placeholder="Informe seu Email" />
              @Html.ValidationMessageFor(x => x.Email)
            </div>

            <div class="form-outline mb-4">
              <label class="form-label" for="Senha">Senha</label>
               <input type="password" class="form-control form-control-lg" asp-for="Senha" id="Senha" placeholder="Informe sua Senha" />
              @Html.ValidationMessageFor(x => x.Senha)
            </div>

            <div class="pt-1 mb-4">
              <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>
            </div>

            <p class="small mb-5 pb-lg-2"><a class="text-muted" asp-action="RedefinirSenha" asp-controller="Login">Esqueceu sua Senha?</a></p>
          </form>

        </div>

      </div>
      <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="https://www.uberlandia.mg.gov.br/wp-content/uploads/2023/05/Prefeitura-entrega-novos-veiculos-para-Siate-e-Central-de-Ambulancias-1.jpg"
          alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
      </div>
    </div>
  </div>
</section>