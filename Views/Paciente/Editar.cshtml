@model PacienteModel
@{
    ViewData["Title"] = "Editar Paciente";
}
<h1>Editar Pacientes</h1>

<form asp-controller="Paciente" asp-action="Alterar" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o Nome do Paciente">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        <label for="problema">Problema</label>
        <input type="text" asp-for="Problema" class="form-control" placeholder="Digite o Problema do Paciente">
        @Html.ValidationMessageFor(x => x.Problema)
    </div>
    <div class="form-group">
        <label for="data">Data de Nascimento</label>
        <input type="date" asp-for="DataNasc" class="form-control" placeholder="Digite a Data de Nascimento do Paciente">
        @Html.ValidationMessageFor(x => x.DataNasc)
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o E-mail do Paciente">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        <label for="celular">Celular</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Digite o Celular do Paciente">
        @Html.ValidationMessageFor(x => x.Celular)
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Alterar</button>
    <a class="btn btn-secondary" asp-controller="Paciente" asp-action="Index" role="button">Voltar</a>
</form>
