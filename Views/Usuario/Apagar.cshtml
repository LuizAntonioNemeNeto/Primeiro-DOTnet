@model UsuarioModel
@{
    ViewData["Title"] = "Apagar Usuário";
}

<div class="text-center">
    <h3>Realmente Deseja Apagar (@Model.Nome)?</h3>
</div>
<br />
<center>
    <a class="btn btn-success" role="button" asp-controller="Usuario" asp-action="Excluir" asp-route-id="@Model.Id">Confirmar</a>
    <a class="btn btn-danger" role="button" asp-controller="Usuario" asp-action="Index">Cancelar</a>
</center>